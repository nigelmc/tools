
#######################################################################
#
####################################
function cksumdir {
    perl -e '
        chomp(@tmp = `ls -A1`);
        foreach(@tmp){
            if( (-f $_) || (-l $_) ) {
                chomp($cksl = `cksum $_`);
                ($cksum,@junk) = split(m{\s+}ms,$cksl);
                print "$_ $cksum\n";
            }
        }
    '
}

#######################################################################
#
####################################
function proforp_X {
    if [ $# -eq 1 ]; then
        FILE=`abspath $1`
        DIR=`dirname ${FILE}`
        DIR_NOW=`abspath $(pwd)`
        chdir ${DIR}
        perl -d:DProf ${FILE}
        dprofpp
        chdir ${DIR_NOW}
    fi
}

#######################################################################
#
####################################
function proforp {
    perl -d:DProf $1 >/dev/null 2>/dev/null
    dprofpp
}

#######################################################################
# tarball
####################################
function tarball {
    if [ $# -eq 1 ]; then
        if [ -d $1 ]; then
            tar -czf ${1}.tgz $1
        fi
    fi
}

#######################################################################
# untarball
####################################
function untarball {
    if [ $# -eq 1 ]; then
        if [ -a $1 ]; then
            tar -xzf $1
        fi
    fi
}

#######################################################################
#
# tarball packlist
#
####################################
function packlist {
    if [ $# -eq 1 ]; then
        if [ -a $1 ]; then
             tar -tzvf $1
        fi
    fi
}

#######################################################################
#
####################################
function epoch_to_localtime {
    if [ $# -eq 1 ]; then
        date --date=@$1 +"%Y-%m-%d %H:%M:%S"
    fi
}

#######################################################################
#
####################################
function etol {
    epoch_to_localtime $1
}

#######################################################################
#
####################################
function epoch {
    date +%s
}

#######################################################################
#
####################################
function view_line {
    if [ $# -eq 2 ]; then
        if [ -a $1 ]; then
            LINE=$2
            head -${LINE} $1 | tail -1
        fi
    fi
}

#######################################################################
# sha
####################################
function sha {
    if [ $# -eq 1 ]; then
        if [ -a $1 ]; then
            openssl sha512 $1
        fi
    fi
}

#######################################################################
# md5
####################################
function md5 {
    if [ $# -eq 1 ]; then
        if [ -a $1 ]; then
            openssl md5 $1
        fi
    fi
}

